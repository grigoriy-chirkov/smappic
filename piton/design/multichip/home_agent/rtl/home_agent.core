CAPI=2:
name: openpiton::home_agent:0.1
description: Home Agent

filesets:
    rtl:
        files:
            - home_agent.v
            - home_agent_amo_alu.v
            - home_agent_config_regs.v
            - home_agent_data.v
            - home_agent_data_wrap.v
            - home_agent_decoder.v
            - home_agent_dir.v
            - home_agent_dir_wrap.v
            - home_agent_encoder.v
            - home_agent_mshr_decoder.v
            - home_agent_pipe1.v
            - home_agent_pipe2.v
            - home_agent_state_wrap.v
            - home_agent_tag.v
            - home_agent_tag_wrap.v
        depend:
            - openpiton::piton_include
            - openpiton::piton_tile_common
            - openpiton::home_agent_sram_wrappers
        file_type: verilogSource

targets:
    default:
        filesets: [rtl]
        generate: [pyhp_preprocess]
    pickle:
        default_tool: icarus
        filesets: [rtl]
        generate: [pyhp_preprocess]
        toplevel: [home_agent]
        tools:
            icarus:
                iverilog_options: [-g 2001 -E]
    verify:
        default_tool: icarus
        filesets: [rtl]
        generate: [pyhp_preprocess]
        toplevel: [home_agent]
        tools:
            icarus:
                iverilog_options: [-g 2001]

generate:
    pyhp_preprocess:
        generator: pyhp_preprocess_gen
        parameters:
            process_me : [[home_agent_data_ecc.v.pyv, home_agent_data_ecc.tmp.v],         
                          [home_agent_data_pgen.v.pyv, home_agent_data_pgen.tmp.v],        
                          [home_agent_mshr.v.pyv, home_agent_mshr.tmp.v],             
                          [home_agent_mshr_wrap.v.pyv, home_agent_mshr_wrap.tmp.v],        
                          [home_agent_pipe1_buf_in.v.pyv, home_agent_pipe1_buf_in.tmp.v],     
                          [home_agent_pipe1_buf_out.v.pyv, home_agent_pipe1_buf_out.tmp.v],    
                          [home_agent_pipe1_ctrl.v.pyv, home_agent_pipe1_ctrl.tmp.v],       
                          [home_agent_pipe1_dpath.v.pyv, home_agent_pipe1_dpath.tmp.v],      
                          [home_agent_pipe2_buf_in.v.pyv, home_agent_pipe2_buf_in.tmp.v],     
                          [home_agent_pipe2_ctrl.v.pyv, home_agent_pipe2_ctrl.tmp.v],       
                          [home_agent_pipe2_dpath.v.pyv, home_agent_pipe2_dpath.tmp.v],      
                          [home_agent_priority_encoder.v.pyv, home_agent_priority_encoder.tmp.v], 
                          [home_agent_state.v.pyv, home_agent_state.tmp.v]]            
                          
   













